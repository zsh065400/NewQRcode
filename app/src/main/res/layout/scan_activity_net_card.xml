<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/rootView"
	style="@style/relative_style"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fab="http://schemas.android.com/apk/res-auto">


	<include layout="@layout/scan_title"/>

	<com.gc.materialdesign.views.ScrollView
		android:id="@+id/content"
		style="@style/scroll_style"
		android:layout_below="@id/rlHeadView">

		<LinearLayout style="@style/pt_linear_style">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingLeft="@dimen/dp_10"
				android:paddingRight="@dimen/dp_10">

				<ImageView
					android:id="@+id/imgPreview"
					android:layout_width="0dp"
					android:layout_height="@dimen/dp_150"
					android:layout_marginLeft="@dimen/dp_15"
					android:layout_marginTop="@dimen/dp_10"
					android:layout_weight="2"
					android:padding="@dimen/dp_5"
					android:scaleType="fitCenter"/>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="4"
					android:orientation="vertical">

					<com.rengwuxian.materialedittext.MaterialEditText
						android:id="@+id/etName"
						style="@style/scan_small_et_style"
						android:layout_marginTop="@dimen/dp_4"
						android:hint="@string/name_hint"
						android:inputType="textPersonName"
						android:maxLength="8"
						fab:met_baseColor="@color/black"
						fab:met_clearButton="true"
						fab:met_floatingLabel="highlight"
						fab:met_maxCharacters="8"
						fab:met_primaryColor="@color/material"
						fab:met_singleLineEllipsis="true"/>

					<com.rengwuxian.materialedittext.MaterialEditText
						android:id="@+id/etQq"
						style="@style/scan_small_et_style"
						android:hint="@string/qq"
						android:inputType="number"
						android:maxLength="15"
						fab:met_baseColor="@color/black"
						fab:met_clearButton="true"
						fab:met_floatingLabel="highlight"
						fab:met_maxCharacters="15"
						fab:met_primaryColor="@color/material"
						fab:met_singleLineEllipsis="true"/>


					<com.rengwuxian.materialedittext.MaterialEditText
						android:id="@+id/etWechat"
						style="@style/scan_small_et_style"
						android:hint="@string/wechat"
						android:inputType="textShortMessage"
						android:maxLength="20"
						fab:met_baseColor="@color/black"
						fab:met_clearButton="true"
						fab:met_floatingLabel="highlight"
						fab:met_maxCharacters="20"
						fab:met_primaryColor="@color/material"
						fab:met_singleLineEllipsis="true"/>

				</LinearLayout>

			</LinearLayout>

			<com.rengwuxian.materialedittext.MaterialEditText
				android:id="@+id/etAddress"
				style="@style/scan_def_edit_style"
				android:hint="@string/address"
				android:inputType="textLongMessage"
				android:maxLength="50"
				fab:met_baseColor="@color/black"
				fab:met_clearButton="true"
				fab:met_floatingLabel="highlight"
				fab:met_maxCharacters="50"
				fab:met_primaryColor="@color/material"
				fab:met_singleLineEllipsis="true"/>


			<com.rengwuxian.materialedittext.MaterialEditText
				android:id="@+id/etCompany"
				style="@style/scan_def_edit_style"
				android:hint="@string/company"
				android:inputType="textLongMessage"
				android:maxLength="30"
				fab:met_baseColor="@color/black"
				fab:met_clearButton="true"
				fab:met_floatingLabel="highlight"
				fab:met_maxCharacters="30"
				fab:met_primaryColor="@color/material"
				fab:met_singleLineEllipsis="true"/>


			<com.rengwuxian.materialedittext.MaterialEditText
				android:id="@+id/etJob"
				style="@style/scan_def_edit_style"
				android:hint="@string/job"
				android:inputType="textShortMessage"
				android:maxLength="20"
				fab:met_baseColor="@color/black"
				fab:met_clearButton="true"
				fab:met_floatingLabel="highlight"
				fab:met_maxCharacters="20"
				fab:met_primaryColor="@color/material"
				fab:met_singleLineEllipsis="true"/>

			<com.rengwuxian.materialedittext.MaterialEditText
				android:id="@+id/etEmail"
				style="@style/scan_def_edit_style"
				android:hint="@string/e_mail"
				android:inputType="textEmailAddress"
				android:maxLength="30"
				fab:met_baseColor="@color/black"
				fab:met_clearButton="true"
				fab:met_floatingLabel="highlight"
				fab:met_maxCharacters="30"
				fab:met_primaryColor="@color/material"
				fab:met_singleLineEllipsis="true"/>

			<com.rengwuxian.materialedittext.MaterialEditText
				android:id="@+id/etPhone"
				style="@style/scan_def_edit_style"
				android:hint="@string/phone"
				android:inputType="phone"
				android:maxLength="11"
				fab:met_baseColor="@color/black"
				fab:met_clearButton="true"
				fab:met_floatingLabel="highlight"
				fab:met_maxCharacters="11"
				fab:met_primaryColor="@color/material"
				fab:met_singleLineEllipsis="true"/>

			<com.rengwuxian.materialedittext.MaterialEditText
				android:id="@+id/etWeibo"
				style="@style/scan_def_edit_style"
				android:hint="@string/weibo"
				android:inputType="textLongMessage"
				android:maxLength="20"
				fab:met_baseColor="@color/black"
				fab:met_clearButton="true"
				fab:met_floatingLabel="highlight"
				fab:met_maxCharacters="20"
				fab:met_primaryColor="@color/material"
				fab:met_singleLineEllipsis="true"/>

			<com.rengwuxian.materialedittext.MaterialEditText
				android:id="@+id/etPerson"
				style="@style/scan_def_edit_style"
				android:hint="@string/person"
				android:inputType="textMultiLine"
				android:maxLength="140"
				fab:met_baseColor="@color/black"
				fab:met_clearButton="true"
				fab:met_floatingLabel="highlight"
				fab:met_maxCharacters="140"
				fab:met_primaryColor="@color/material"/>

		</LinearLayout>
	</com.gc.materialdesign.views.ScrollView>

	<material.view.fab.FloatingActionButton
		android:id="@+id/fabSave"
		style="@style/fab_style"
		fab:fab_colorNormal="@color/material"
		fab:fab_colorPressed="@color/material_pressed"
		fab:fab_icon="@mipmap/ic_grade"
		fab:fab_size="normal"/>
</RelativeLayout>
