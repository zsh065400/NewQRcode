<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/rootView"
	style="@style/general_base_rl_style"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".activitys.result.AudioResActivity">


	<RelativeLayout
		android:id="@+id/rlHeadView"
		style="@style/general_title_rl_style">

		<TextView
			style="@style/general_title_tv_style"
			android:text="@string/result_caption"/>
	</RelativeLayout>


	<View
		android:id="@+id/middleView"
		style="@style/def_line_style"
		android:layout_below="@id/rlHeadView"/>


	<TextView
		android:id="@+id/tvFileName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/middleView"
		android:layout_marginBottom="20dp"
		android:padding="35dp"
		android:text="@string/current_file"
		android:textColor="@color/black"
		android:textSize="25dp"/>


	<com.gc.materialdesign.views.ButtonFloat
		android:id="@+id/btnPlayOrPause"
		style="@style/float_button_style"
		app:animate="true"/>

</RelativeLayout>
