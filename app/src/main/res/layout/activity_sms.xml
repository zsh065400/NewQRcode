<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootView"
    style="@style/general_base_rl_style"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rlHeadView"
        style="@style/title_style">

        <TextView
            style="@style/title_text_style"
            android:text="@string/main_aty_sms"/>
    </RelativeLayout>


    <ScrollView
        style="@style/general_scorll_view_style"
        android:layout_below="@id/rlHeadView">

        <LinearLayout style="@style/general_base_vertical_ll_style">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etSmsPhone"
                style="@style/def_edit_style"
                android:autoLink="phone"
                android:hint="@string/sms_hint"
                android:inputType="phone"
                android:maxLength="11"
                app:met_baseColor="@color/black"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="11"
                app:met_primaryColor="@color/material"
                app:met_singleLineEllipsis="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etSmsContent"
                style="@style/def_edit_style"
                android:hint="@string/sms_content_hint"
                android:inputType="textMultiLine"
                android:maxLength="175"
                app:met_baseColor="@color/black"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="175"
                app:met_primaryColor="@color/material"/>

        </LinearLayout>
    </ScrollView>

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/btnCreate"
        style="@style/float_button_style"
        app:animate="true"
        app:iconDrawable="@mipmap/ic_create"/>

</RelativeLayout>
