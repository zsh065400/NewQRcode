<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootView"
    style="@style/general_base_rl_style"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rlHeadView"
        style="@style/general_title_rl_style">

        <TextView
            style="@style/general_title_tv_style"
            android:text="@string/result_caption"/>

    </RelativeLayout>

    <View
        android:id="@+id/middleView"
        style="@style/def_line_style"
        android:layout_below="@id/rlHeadView"/>

    <ScrollView
        style="@style/general_scorll_view_style"
        android:layout_below="@id/middleView">

        <TextView
            android:id="@+id/tvResultContent"
            style="@style/guide_hint_textview_style"
            android:autoLink="all"/>
    </ScrollView>


    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/btnCopy"
        style="@style/float_button_style"
        app:animate="true"
        app:iconDrawable="@mipmap/ic_copy"/>

</RelativeLayout>
