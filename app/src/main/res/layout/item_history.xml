<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/ivQrcode"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvQrcodeName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_70"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_5"
        android:text="2016-6-1"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_20"/>

    <material.view.fab.FloatingActionButton
        android:id="@+id/fabShare"
        style="@style/wrap_content"
        app:fab_colorNormal="@color/material"
        app:fab_colorPressed="@color/material_pressed"
        app:fab_icon="@mipmap/ic_share"
        app:fab_size="mini"/>

    <material.view.fab.FloatingActionButton
        android:id="@+id/fabDelete"
        style="@style/wrap_content"
        app:fab_colorNormal="@color/material"
        app:fab_colorPressed="@color/material_pressed"
        app:fab_icon="@mipmap/ic_delete"
        app:fab_size="mini"/>
</LinearLayout>
