<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvVersionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/dp_twenty_five"
            android:layout_marginRight="@dimen/dp_twenty_five"
            android:layout_marginTop="10dp"
            android:text="@string/new_version_code"
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/tvUpdateContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_twenty_five"
            android:layout_marginRight="@dimen/dp_twenty_five"
            android:text="@string/update_content"
            android:textColor="@color/black"/>


    </LinearLayout>
</ScrollView>
