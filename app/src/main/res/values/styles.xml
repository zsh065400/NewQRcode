<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--系统主题-->
	<style name="AppTheme"
	       parent="BaseTheme">
	</style>

	<style name="BaseTheme"
	       parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:screenOrientation">portrait</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>

	<!---->
	<!--重构部分-->
	<style name="my_ripple_view">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/dp_70</item>
		<item name="android:background">@color/white</item>
		<item name="android:gravity">center_vertical|left</item>
		<item name="android:paddingLeft">@dimen/dp_32</item>
		<item name="android:textSize">@dimen/dp_15</item>
	</style>

	<!--标题内容-->
	<style name="wrap_content">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<!--各个页面内的标题样式-->
	<style name="title_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/dp_140</item>
		<item name="android:background">@color/material</item>
		<item name="android:paddingBottom">@dimen/dp_20</item>
	</style>

	<!--通用标题文本框-->
	<style name="title_text_style">
		<item name="android:gravity">center</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/dp_30</item>
	</style>
	<!--FloatActionButton的标签样式-->
	<style name="fab_lable_style">
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/fab_label_background</item>
	</style>

	<!--FloatActionMenu的总体样式-->
	<style name="fam_style"
	       parent="wrap_content">
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_alignParentEnd">true</item>
		<item name="android:layout_marginBottom">@dimen/dp_20</item>
		<item name="android:layout_marginRight">@dimen/dp_20</item>
		<item name="android:layout_marginEnd">@dimen/dp_20</item>
	</style>

	<!-- FloatButton-->
	<style name="fab_style"
	       parent="fam_style">
	</style>

	<!--通用滚动条风格-->
	<style name="scroll_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
	</style>

	<!--通用垂直线性布局-->
	<style name="pt_linear_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
	</style>

	<!--图片二维码imageView-->
	<style name="def_imgview_style">
		<item name="android:layout_width">@dimen/dp_220</item>
		<item name="android:layout_height">@dimen/dp_250</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:layout_marginTop">7dp</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:layout_marginLeft">2dp</item>
	</style>

	<!--输入框的style-->
	<style name="def_edit_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/dp_10</item>
		<item name="android:layout_marginLeft">@dimen/dp_20</item>
		<item name="android:layout_marginRight">@dimen/dp_20</item>
		<item name="android:textSize">@dimen/dp_16</item>
		<item name="android:textCursorDrawable">@null</item>
	</style>


	<style name="scan_def_edit_style"
	       parent="def_edit_style">
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:editable">false</item>
	</style>

	<!-- 基础布局-->
	<style name="base_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@color/special_white</item>
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
	</style>
	<!--通用线性布局-->
	<style name="linear_style"
	       parent="base_style">
		<item name="android:orientation">vertical</item>
	</style>
	<!-- 通用相对布局-->
	<style name="relative_style"
	       parent="base_style">

	</style>

	<style name="btn_rectangle_style"
	       parent="wrap_content">
		<item name="android:background">@color/material</item>
	</style>

	<style name="linear_center">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
	</style>

	<!--头像边editText的style-->
	<style name="small_et_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginLeft">@dimen/dp_15</item>
		<item name="android:layout_marginRight">@dimen/dp_15</item>
		<item name="android:textSize">@dimen/dp_15</item>
		<item name="android:textCursorDrawable">@null</item>
	</style>

	<!--适配扫描结果的-->
	<style name="scan_small_et_style"
	       parent="small_et_style">
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:editable">false</item>
	</style>

	<!--结果页面文本框-->
	<style name="result_text_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/dp_17</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_margin">@dimen/dp_25</item>
		<item name="android:textColor">@color/black</item>
	</style>

</resources>